{
  "schemaVersion": 1,
  "id": "configurablesplashtexts",
  "version": "${version}",

  "name": "Configurable Splash Texts",
  "description": "Allows to create or remove additional splash texts to display in Minecraft's main menu",
  "authors": [
    "Treetrain1"
  ],
  "contact": {
    "homepage": "https://github.com/Treetrain1/Configurable-Splash-Texts",
    "sources": "https://github.com/Treetrain1/Configurable-Splash-Texts",
    "issues": "https://github.com/Treetrain1/Configurable-Splash-Texts/issues"
  },

  "license": "LGPL-3.0",
  "icon": "assets/configurablesplashtexts/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.treetrain1.configurablesplashtexts.ConfigurableSplashTexts"
    ],
    "modmenu": [
      "com.treetrain1.configurablesplashtexts.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "configurablesplashtexts.mixins.json"
  ],

  "depends": {
    "frozenlib": ">=1.3.1-",
    "cloth-config": ">=11.0.0",
    "fabricloader": ">=0.14.21",
    "minecraft": "~1.20.1-",
    "java": ">=17"
  },
  "suggests": {
    "modmenu": ">=5.0.0"
  }
}
